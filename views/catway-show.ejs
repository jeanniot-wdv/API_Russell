<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include('partials/head') %>
  <title>Détail de la passerelle</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="container">
    <h1 class="page-title">Passerelle n° <%= catway.catwayNumber %></h1>

    <section class="section-info">
      <p><strong>Numéro :</strong> <%= catway.catwayNumber %></p>
      <p><strong>Type :</strong> <%= catway.catwayType %></p>
      <p><strong>État :</strong> <%= catway.catwayState %></p>
    </section>

    <section class="section-table">
      <h2>Réservations associées</h2>

      <% if (bookings.length > 0) { %>
        <table class="styled-table">
          <thead>
            <tr>
              <th>Utilisateur</th>
              <th>Bateau</th>
              <th>Date début</th>
              <th>Date fin</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% bookings.forEach(b => { %>
              <tr>
                <td><%= b.clientName %></td>
                <td><%= b.boatName %></td>
                <td><%= new Date(b.startDate).toLocaleDateString('fr-FR') %></td>
                <td><%= new Date(b.endDate).toLocaleDateString('fr-FR') %></td>
                <td class="actions">
                  <a href="/catways/<%= catway._id %>/bookings/<%= b._id %>"><button class="btn-secondary">Voir</button></a>
                  <form action="/catways/<%= catway._id %>/bookings/<%= b._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Confirmer la suppression ?');" style="display:inline;">
                    <button type="submit" class="btn btn-primary">Supprimer</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>Aucune réservation pour cette passerelle.</p>
      <% } %>
    </section>

    <section class="section-form">
      <h3>Modifier cette passerelle</h3>
      <form class="styled-form" action="/catways/<%= catway._id %>?_method=PUT" method="POST">
        <input type="text" name="catwayNumber" value="<%= catway.catwayNumber %>" required>
        <input type="text" name="catwayType" value="<%= catway.catwayType %>" required>
        <input type="text" name="catwayState" value="<%= catway.catwayState %>" required>
        <button type="submit" class="btn">Modifier</button>
      </form>
    </section>

    <section class="section-form">
      <h3>Ajouter une réservation</h3>
      <form class="styled-form" action="/catways/<%= catway._id %>/bookings" method="POST">
        <input type="hidden" name="catwayNumber" value="<%= catway.catwayNumber %>">

        <label>Nom du client</label>
        <input type="text" name="clientName" required>

        <label>Nom du bateau</label>
        <input type="text" name="boatName" required>

        <label>Date de début</label>
        <input type="date" name="startDate" required>

        <label>Date de fin</label>
        <input type="date" name="endDate" required>

        <button type="submit" class="btn">Ajouter</button>
      </form>
    </section>

    <section class="section-form">
      <form action="/catways/<%= catway._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Confirmer la suppression ?');">
        <button type="submit" class="btn btn-danger">Supprimer la passerelle</button>
      </form>
      <a href="/catways" class="btn">Retour à la liste</a>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
